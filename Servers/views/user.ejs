<%- include("partials/header") %>
<center>
    <div class="container col s4">
        <div class="row">
            <div class="col s12">
              <div class="card">
                <div class="card-content">
                  <span class="card-title">Account</span>
                    <blockquote>
                        <table>
                            <tr>
                                <td>
                                    Username:
                                </td>
                                <td>
                                    <%= username %>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    No. of comments:
                                </td>
                                <td>
                                    <%= number %>
                                </td>
                            </tr>
                        </table>
                    </blockquote>
                  <a class="btn-floating halfway-fab waves-effect waves-light red" href=<% if(username == session.username){ %><%- "'/user/self/change'" %><% }else{ %><%- "'/user/"+userid+"/change'" %><% } %>><i class="material-icons">edit</i></a>
                </div>
              </div>
            </div>
          </div> 
    </div>
</center>


