<%- include("partials/header") %>
<% data.forEach(datum => { %>
    <div class="row">
        <div class="col s12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= datum.title %></span>
              <blockquote><%= datum.content %></blockquote>
              <p style="font-weight: 10; font-size: 10; display: inline;">By <strong><% if(session.username==datum.user.username){ %><i>You</i><% }else{ %><%= datum.user.username %><% } %></strong> on <%= datum.time.toString() %></p>
              <% if(session.username==datum.user.username||session.admin){ %><a class=<%- "'btn-floating halfway-fab waves-effect waves-light " + (session.username==datum.user.username ? "red'" : "indigo'") %> href=<%= "/posts/edit/"+datum._id %>><i class="material-icons">edit</i></a><% } %>
            </div>
          </div>
        </div>
      </div>
<% }) %>
<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large teal lighten-2" href="/posts/addpost">
      <i class="material-icons ">add</i>
    </a>
  </div>

<%- include("partials/footer") %>